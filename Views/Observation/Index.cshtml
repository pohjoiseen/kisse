@model ListModel<ObservationModel>
@{
    ViewData["Title"] = "All Observations";
}

<div class="container">
<h1>@Model.TotalData observation(s) recorded</h1>
<p class="text-muted">Ordered by date</p>

@if (Model.Data.Count > 0)
{
    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>User</th>
            <th>Photos</th>
            <th>Cat</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var observation in Model.Data)
        {
            <tr>
                <td><b><a href="@Url.ActionLink("Edit", null, new { id = observation.Id })">@observation.Date.ToString("d.M.yyyy HH:mm")</a></b></td>
                <td>@observation.Username</td>
                <td>
                    <div class="d-flex gap-2 flex-wrap">
                        @foreach (var photo in observation.Photos!)
                        {
                            <partial name="_PhotoThumbnail" model="photo.Value"/>
                        }
                    </div>
                </td>
                <td>
                    @if (observation.Cat is not null)
                    {
                        <a href="@Url.ActionLink("Edit", "Cat", new { id = observation.Cat.Id })">@observation.Cat.Name</a>
                    }
                    else
                    {
                        <span class="text-muted">unknown</span>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div id="photo-view"></div>
}
else
{
    <p class="text-muted">No cats!</p>
}

@if (Model.TotalPages > 1)
{
    <nav class="mt-4 mb-5">
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                @if (i == Model.Page)
                {
                    <li class="page-item active">
                        <span class="page-link">@i</span>
                    </li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" href="@Url.ActionLink(null, null, new { page = i })">@i</a></li>
                }
            }
        </ul>
    </nav>
}
</div>